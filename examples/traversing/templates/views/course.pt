<article>
  <h2>Course: ${context.id}, ${context.name}</h2>
    <div>
    <a href="${url_for(context, 'create_session')}">
      <i class="bi-folder-plus"></i>
      Add new session
    </a>
  </div>
  <section tal:condition="not context.sessions">
    No sessions created for this course, yet
  </section>
  <section tal:condition="context.sessions">
    <h3>Sessions</h3>
    <div class="list-group">
      <a class="button list-group-item d-flex justify-content-between align-items-start"
         tal:repeat="session context.sessions"
         href="${url_for(session, 'view', session_id=context.id)}">
        ${session.name} scheduled for ${session.scheduled_for}
      </a>
    </div>
  </section>
</article>
