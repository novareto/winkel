<article>
  <h2>Company: ${context.id}, ${context.name}</h2>
  <div>
    <a href="${path_for(context, 'create_course')}">
      <i class="bi-folder-plus"></i>
      Add new course
    </a>
  </div>
  <section tal:condition="not context.courses">
    No courses created, yet
  </section>
  <section tal:condition="context.courses">
    <h3>Courses</h3>
    <div class="list-group">
      <a class="button list-group-item d-flex justify-content-between align-items-start" tal:repeat="course context.courses"
         href="${path_for(course, 'view', course_id=course.id)}">
        ${course.name}
      </a>
    </div>
  </section>
</article>
